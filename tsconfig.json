{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "system",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outFile": "./dist/tsc.js",
        "sourceMap": true,
        "lib": [ "es2015", "dom",  "es2017" ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}